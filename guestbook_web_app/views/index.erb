<form action="/messages" method="post" class="mb-5">

    <div class="form-group my-2">
        <label for="author">Fullname</label>
        <input id="author" name="author" type="text" class="form-control" placeholder="Type your fullname" style="width: 50%;">
    </div>

    <div class="form-group my-2">
        <label for="content">Content</label>
        <textarea id="content" name="content" type="text" class="form-control" style="resize: none; width: 50%; height: 300px;"></textarea>
    </div>

    <button type="submit" class="btn btn-md btn-primary">Send</button>
</form>

<% posts.each do |post| %>
    <p><strong><%= post[:author] %></strong> <%= post[:content] %></p>
<% end %>